<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="loginsignupapp.ForgetPasswordController">
   <children>
      <VBox alignment="CENTER" spacing="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Reset Password" />
            <TextField fx:id="usernameField" promptText="Enter Username" />
            <PasswordField fx:id="newPasswordField" promptText="New Password" />
            <Label fx:id="resetMessageLabel" textFill="blue" />
            <Button onAction="#handleResetPassword" text="Reset Password" />
         </children>
      </VBox>
   </children>
</AnchorPane>